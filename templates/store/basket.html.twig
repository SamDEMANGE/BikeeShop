{% extends 'layout.html.twig' %}
{% block title %} | {{ parent() }}{% endblock %}
{% block content %}
    <div class="container">
        <h2>Panier</h2>
            <div id="panier">

                {% for produit in produits %}
                    <div class="col-md-4 col-sm-6 hero-feature">
                        <div class="thumbnail">

                            <img src="{{ asset(produit.url) }}" alt="{{ produit.alt }}">


                            <div class="caption">
                                <h3>{{ produit.nom }}</h3>
                                <select id="select{{ items }}">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                </select>

                                <p>
                                    <span class="badge">{{ produit.prix }} â‚¬</span>
                                    <a href="{{path('store_product_details', {'id':produit.id})}}" class="btn btn-default">Voir la fiche</a>
                                    <a href="{{ path: }}">Supprimer l'article</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% for items in nuberItem %}
                    <div>
                        <img src="{{ image[items] }}">
                        <h5 class="titre">{{ title[items] }}</h5>
                        <p>{{ detail[items] }}</p>
                        <h5 class="prix">{{ prix[items] }}</h5>
                        <select id="select{{ items }}">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                        <a id="suppr{{ items }}">Supprimer l'article</a>

                    </div>
                {% endfor %}
            </div>



            </div>
        <input type="button" value="Commander">
         <input type="button" value="Continuer mes achats">
        {% block footer %}{{ parent() }}{% endblock %}

{% endblock %}