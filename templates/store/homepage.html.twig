{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% block content %}
    <!-- Page Content -->

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('img/slides/slide-1.jpg') }}" alt="Slide 1">
            </div>
            <div class="item">
                <img src="{{ asset('img/slides/slide-2.jpg') }}" alt="Slide 2">
            </div>
        </div>

        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Précédent</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les nouveautés</h3>
        </div>
    </div>

    <div class="row text-center">

        {% for produit in date_produits %}

            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/velo-1.jpg') }}" alt="Nom du produit">
                    <div class="caption">
                        <h3>{{ produit.nom }}</h3>
                        <p>{{ produit.description }}</p>
                        <p>
                            <span class="badge">{{ produit.prix }}</span>
                            <a href="{{path('store_product_details', {'id':produit.id})}}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les plus populaires</h3>
        </div>
    </div>

    <div class="row text-center">

        {% for produit in pop_produits %}

            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/velo-5.jpg') }}" alt="Nom du produit">
                    <div class="caption">
                        <h3>{{ produit.nom }}</h3>
                        <p>{{ produit.description }}</p>
                        <p>
                            <span class="badge">{{ produit.prix }}</span>
                            <a href="{{path('store_product_details', {'id':produit.id})}}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>





{% endblock %}