{% extends 'layout.html.twig' %}

{% block title %} Recherche - {{ parent() }}{% endblock %}



{% block content %}

<div class="row text-center">

    {% if produits|length > 0 %}
    <div class="alert alert-success">
        <h4>
            {{ produits|length }} résultat(s)
        </h4>
    </div>


    {% for produit in produits %}
        <div class="col-md-4 col-sm-6 hero-feature">
            <div class="thumbnail">

                <img src="{{ asset(produit.url) }}" alt="{{ produit.alt }}">


                <div class="caption">
                    <h3>{{ produit.nom }}</h3>
                    <p>{{ produit.description }}</p>
                    <p>
                        <span class="badge">{{ produit.prix }} €</span>
                        <a href="{{path('store_product_details', {'id':produit.id})}}" class="btn btn-default">Voir la fiche</a>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}

    {% else %}
        <div class="alert alert-danger">
            <h4>
                Aucun produit ne correspond à votre recherche... !
                Désolé !
            </h4>
        </div>
    {% endif %}


</div>    {% endblock %}